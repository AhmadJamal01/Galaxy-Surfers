    "world": [
      // REMOVED THE SEPRATE CAMERA ENTITY AND MADE IT A CHILD OF THE NINJA.
      // Added Movement Component to simulate infinite running
      {
        // Added an entity for the ninja in the scene with a mesh renderer component.
        "rotation": [0, 0, 0],
        "scale": [5, 5, 5],
        "position": [0, 0, 0],
        "components": [
          {
            "type": "Mesh Renderer",
            "mesh": "ninja",
            "material": "ninja"
          },
          {
            "type": "Ninja Camera Controller", // It holds speed info about our ninja.
            "positionSensitivity": [35.0, 35.0, 35.0]
          },
          {
            "type": "Movement",
            "linearVelocity": [0, 0, 3],
            "angularVelocity": [0, 0, 0]
          }
        ],
        "children": [
          {
            "position": [0, 0.18, -0.35], // setting offset to the ninja (Decied with ImGUI)
            "rotation": [-20, 180, 0.0],

            // It's a child entity of the ninja with only the camera component.
            "components": [{ "type": "Camera" }]
          }
        ]
      },
      // Ground
      {
        "position": [0, -1, 0],
